@model IEnumerable<AeroLinea_Futuro.Models.Aviones>

@{
    ViewData["Title"] = "Index";
}

<h2>Listado de Aviones</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fabricante)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacidad)
            </th>
            <th>
                <a class="btn btn-success" asp-action="Create">Crear</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacidad)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.AvionID">Editar</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AvionID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
